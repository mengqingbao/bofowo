    <style type="text/css">
    	html {
			background: url(img/background.jpg) no-repeat center center fixed; 
			-webkit-background-size: cover;
			-moz-background-size: cover;
			-o-background-size: cover;
			background-size: cover;
		}
		.container {
		  position: absolute;
		  top:15%; left: 0; bottom: 0; right: 0;
		}
    </style>
