<script>
jQuery.ajax({
	     type: 'post',
	     url: 'shopHotList-$!{shop.id}-hot.htm',
	     dataType:'text',
	     success:function(data){
	     	console.log(data);
	     	jQuery("#hotSaleList").html(data);
	     }
	});
	
jQuery.ajax({
	     type: 'post',
	     url: 'shopHotList-$!{shop.id}-collection.htm',
	     dataType:'text',
	     success:function(data){
	     	jQuery("#collectionList").html(data);
	     }
	});
</script>
