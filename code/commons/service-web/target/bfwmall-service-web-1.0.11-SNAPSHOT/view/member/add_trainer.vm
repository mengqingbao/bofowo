<script>
	function getSubCategory(code){

				
		jQuery.ajax({
            type:'get',
            dataType:'json',
            url:'course-add-ajax-getSubCategory.htm',
            data:'code=' + code,
            success: function(msg){
               $("#subCategory").empty();
			   jQuery.each(msg,function(idx,item){
					
					$("#subCategory").append("<option value=\"1\">"+item.title+"</option>");
					
			   });
             }});
	}
 
 </script>	

